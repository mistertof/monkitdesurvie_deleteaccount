    input, textarea { width: 100%; padding: 0.5em; margin-top: 0.3em; border: 1px solid #ccc; border-radius: 4px; }
    button { margin-top: 1.5em; padding: 0.7em 1.5em; background: #e53935; color: #fff; border: none; border-radius: 4px; cursor: pointer; }
