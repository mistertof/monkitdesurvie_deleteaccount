<body>
  <div class="container">
    <h1>Demande de suppression de compte</h1>
    <form id="deleteForm">
      <label for="email">Votre adresse email utilisée dans l'application :</label>
      <input type="email" id="email" name="email" required placeholder="exemple@email.com">

      <label for="message">Message (optionnel) :</label>
      <textarea id="message" name="message" rows="4" placeholder="Vous pouvez préciser votre demande ici..."></textarea>

      <button type="submit">Envoyer la demande</button>
    </form>
    <p style="font-size:0.9em; color:#888; margin-top:1em;">
      Votre demande sera envoyée à l'équipe de support, qui supprimera votre compte et toutes les données associées.
    </p>
  </div>
  <script>
    document.getElementById('deleteForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const email = document.getElementById('email').value;
      const message = document.getElementById('message').value;
      const subject = encodeURIComponent('Demande de suppression de compte');
      const body = encodeURIComponent(
        `Bonjour,\n\nJe souhaite supprimer mon compte et toutes les données associées à l\'adresse : ${email}\n\n${message ? 'Message complémentaire :\n' + message : ''}\n\nMerci.`
      );
      window.location.href = `mailto:craftedbytof@gmail.com?subject=${subject}&body=${body}`;
    });
  </script>
</body>
